<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="GlobalAttrDeclare">

        <attr name="progressState" format="enum">
            <enum name="pending" value="0" />
            <enum name="inProgress" value="1" />
            <enum name="complete" value="2" />
        </attr>

    </declare-styleable>

    <declare-styleable name="ProgressStates">
        <attr name="pending" format="boolean" />
        <attr name="inProgress" format="boolean" />
        <attr name="complete" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AppTimelinePointView">
        <attr name="progressState" />
        <attr name="location" format="string" />
        <attr name="message" format="string" />
        <attr name="isLast" format="boolean" />
        <attr name="verbose" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AppSteppedProgress">
        <attr name="progressState" />
    </declare-styleable>

    <declare-styleable name="AppThemedCardView">
        <attr name="themeColor" format="color|reference" />
        <attr name="atcvTitle" format="string|reference" localization="suggested" />
        <attr name="atcvSubtitle" format="string|reference" localization="suggested" />
        <attr name="additionalInfo" format="string|reference" localization="suggested" />
        <attr name="infoItem1Text" format="string|reference" localization="suggested" />
        <attr name="infoItem1DrawableLeftCompat" format="reference" />
        <attr name="infoItem2Text" format="string|reference" localization="suggested" />
        <attr name="infoItem2DrawableLeftCompat" format="reference" />
        <attr name="infoItem3Text" format="string|reference" localization="suggested" />
        <attr name="infoItem3DrawableLeftCompat" format="reference" />
        <attr name="btnText" format="string|reference" localization="suggested" />
    </declare-styleable>

    <declare-styleable name="AppTextView">
        <attr name="drawableLeftCompat" format="reference" />
        <attr name="drawableRightCompat" format="reference" />
        <attr name="drawableTopCompat" format="reference" />
        <attr name="drawableBottomCompat" format="reference" />
    </declare-styleable>

    <declare-styleable name="AppLabelledTextView" parent="AppTextView">
        <attr name="drawableLabelLeftCompat" format="reference" />
        <attr name="drawableLabelRightCompat" format="reference" />
        <attr name="drawableLabelTopCompat" format="reference" />
        <attr name="drawableLabelBottomCompat" format="reference" />
        <attr name="text" format="string|reference" localization="suggested" />
        <attr name="labelText" format="string|reference" localization="suggested" />
        <attr name="textAppearanceText" format="reference" />
        <attr name="textAppearanceLabel" format="reference" />
    </declare-styleable>

    <attr name="toolbarColor" format="color|reference" />
    <attr name="tallToolbarHeight" format="dimension|reference" />

    <!-- corner radius and color attributes for actions -->
    <attr name="bgRoundedViewRadius" format="dimension" />
    <attr name="bgRoundedViewColor" format="color" />

    <attr name="etHintFont">
        <enum name="MONTSERRAT_BOLD" value="0" />
        <enum name="MONTSERRAT_LIGHT" value="1" />
        <enum name="MONTSERRAT_MEDIUM" value="2" />
        <enum name="MONTSERRAT_REGULAR" value="3" />
        <enum name="ROBOTO_THIN" value="4" />
        <enum name="ROBOTO_LIGHT" value="5" />
        <enum name="ROBOTO_MEDIUM" value="6" />
        <enum name="ROBOTO_REGULAR" value="7" />
    </attr>
</resources>