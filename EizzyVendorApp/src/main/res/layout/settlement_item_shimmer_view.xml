<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/atom_3"
    android:paddingTop="@dimen/atom_3">

    <android.support.v7.widget.CardView
        android:id="@+id/back_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/atom_9"
        android:layout_marginRight="@dimen/atom_9"
        android:elevation="@dimen/atom_1"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/atom_1"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/atom_4"
        android:layout_marginLeft="@dimen/atom_6"
        android:layout_marginRight="@dimen/atom_6"
        android:layout_marginTop="@dimen/atom_4"
        android:background="@drawable/card_edge"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/atom_1"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/atom_4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/atom_4"
                    android:layout_marginRight="@dimen/atom_6"
                    android:layout_weight="1"
                    android:alpha="0.2"
                    android:background="@color/darkMidnightBlue"
                    android:gravity="left" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/atom_4"
                    android:layout_marginLeft="@dimen/atom_4"
                    android:layout_weight="1"
                    android:alpha="0.2"
                    android:background="@color/darkMidnightBlue"
                    android:gravity="right" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/atom_2"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/atom_3"
                    android:layout_marginRight="@dimen/atom_4"
                    android:layout_weight="1"
                    android:alpha="0.2"
                    android:background="@color/khaki"
                    android:gravity="left" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/atom_3"
                    android:layout_marginLeft="@dimen/atom_6"
                    android:layout_weight="1"
                    android:alpha="0.2"
                    android:background="@color/khaki"
                    android:gravity="right" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>