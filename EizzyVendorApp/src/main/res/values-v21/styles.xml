<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AndroidExpandedTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/transparent</item>
        <item name="android:textSize">0.1sp</item>
    </style>

    <style name="ExpandedTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorScreenTitle</item>
        <item name="fontPath">fonts/Montserrat-Bold.ttf</item>
        <item name="android:textSize">@dimen/font_24</item>
    </style>

    <style name="ExpandedSubTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorScreenSubTitle</item>
        <item name="fontPath">fonts/Montserrat-Regular.ttf</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="CollapsedTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorScreenTitle</item>
        <item name="fontPath">fonts/Montserrat-Bold.ttf</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="AppDialogTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorScreenTitle</item>
        <item name="fontPath">fonts/Montserrat-Bold.ttf</item>
        <item name="android:textSize">@dimen/font_24</item>
    </style>

    <style name="AppDialogMessageTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorScreenSubTitle</item>
        <item name="fontPath">fonts/Montserrat-Regular.ttf</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="FontMontserratBold">
        <item name="fontPath">fonts/Montserrat-Bold.ttf</item>
    </style>

    <style name="FontMontserratLight">
        <item name="fontPath">fonts/Montserrat-Light.ttf</item>
    </style>

    <style name="FontMontserratMedium">
        <item name="fontPath">fonts/Montserrat-Medium.ttf</item>
    </style>

    <style name="FontMontserratRegular">
        <item name="fontPath">fonts/Montserrat-Regular.ttf</item>
    </style>

    <style name="FontRobotoRegular">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="FontRobotoLight">
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="FontRobotoMedium">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>

    <style name="FontRobotoThin">
        <item name="fontPath">fonts/Roboto-Thin.ttf</item>
    </style>

    <style name="AppEditText">
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColor">@color/colorEtText</item>
        <item name="android:textColorHint">@color/colorEtHintText</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="AppUnderLineEditText" parent="Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColor">@color/colorEtText</item>
        <item name="android:textColorHint">@color/colorEtHintText</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="ErrorMsgText" parent="FontMontserratRegular">
        <item name="android:textColor">@color/colorEtErrorText</item>
        <item name="android:textSize">@dimen/font_10</item>
    </style>

    <style name="HintText">
        <item name="colorAccent">@color/colorEtHintText</item>
        <item name="colorControlNormal">@color/colorEtHintText</item>
        <item name="colorControlActivated">@color/deepSkyBlue</item>
        <item name="android:textColor">@color/colorEtHintText</item>
        <item name="android:textSize">@dimen/font_12</item>
        <item name="fontPath">fonts/Montserrat-Medium.ttf</item>
        <item name="android:textColorHint">@color/colorEtHintText</item>
    </style>

    <style name="AppTextInputLayout">
        <item name="android:theme">@style/HintText</item>
        <item name="android:layout_margin">@dimen/atom_10</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="AppTextInputLayout.CreateOrder">
        <item name="android:theme">@style/HintText</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:layout_marginLeft">@dimen/atom_10</item>
        <item name="android:layout_marginRight">@dimen/atom_10</item>
    </style>

    <style name="AppLabelledTextView">
        <item name="android:layout_margin">@dimen/atom_10</item>
        <item name="textAppearanceText">@style/TextAppearance.AppLabelledTextViewText</item>
        <item name="textAppearanceLabel">@style/TextAppearance.AppLabelledTextViewLabel</item>
    </style>

    <style name="TextAppearance.AppLabelledTextViewLabel" parent="FontMontserratMedium">
        <item name="android:textColor">@color/colorEtHintText</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="TextAppearance.AppLabelledTextViewText" parent="FontMontserratRegular">
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColor">@color/colorScreenSubTitle</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="AppActionButton" parent="FontMontserratBold">
        <item name="fontPath">fonts/Montserrat-Bold.ttf</item>
        <item name="android:textSize">@dimen/font_12</item>
        <item name="android:theme">@style/BackgroundAppActionButton</item>
        <item name="android:textColor">@color/colorTextActionButton</item>
        <item name="android:background">@drawable/bg_rounded_action</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/atom_5</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="TextView.Message" parent="FontMontserratRegular">
        <item name="android:textSize">@dimen/font_12</item>
        <item name="android:textColor">@color/colorTextMessagePrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.ClickableMessage" parent="FontMontserratBold">
        <item name="android:textSize">@dimen/font_12</item>
        <item name="android:textColor">@color/colorTextMessagePrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.Switch" parent="FontMontserratMedium">
        <item name="android:textSize">@dimen/font_12</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="title.section" parent="FontMontserratBold">
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textColor">@color/colorScreenTitle</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="item.sort" parent="FontMontserratRegular">
        <item name="android:textSize">@dimen/font_12</item>
        <item name="android:textColor">@color/colorSortItemText</item>
        <item name="android:layout_margin">@dimen/atom_2</item>
    </style>

    <style name="BackgroundAppActionButton">
        <item name="bgRoundedViewRadius">0dp</item>
        <item name="bgRoundedViewColor">@color/orderAssigned</item>
    </style>

    <style name="RoundedView">
        <item name="bgRoundedViewRadius">@dimen/primary_btn_radius</item>
    </style>

    <style name="PrimaryRoundedView" parent="RoundedView">
        <item name="bgRoundedViewColor">@color/colorSecondary</item>
    </style>

    <style name="DeliveredTagRoundedView" parent="RoundedView">
        <item name="bgRoundedViewColor">@color/orderDelivered</item>
    </style>

    <style name="UndeliveredTagRoundedView" parent="RoundedView">
        <item name="bgRoundedViewColor">@color/orderUndelivered</item>
    </style>

    <style name="PlacedTagRoundedView" parent="RoundedView">
        <item name="bgRoundedViewColor">@color/orderPlaced</item>
    </style>

    <style name="ConfirmedTagRoundedView" parent="RoundedView">
        <item name="bgRoundedViewColor">@color/orderConfirmed</item>
    </style>

    <style name="AssignedTagRoundedView" parent="RoundedView">
        <item name="bgRoundedViewColor">@color/orderAssigned</item>
    </style>

    <style name="PickedTagRoundedView" parent="RoundedView">
        <item name="bgRoundedViewColor">@color/orderPicked</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
